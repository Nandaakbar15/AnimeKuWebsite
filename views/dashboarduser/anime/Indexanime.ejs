<div class="container px-4 px-lg-5 mt-5">
    <h2 class="text-center mb-4">List Anime</h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        <% anime.forEach(data => { %>
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="/images/<%= data.image %>" alt="..."/>
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder"><%= data.title %></h5>
                            <%= data.author %>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                       <a href="/user/anime/detailanime/<%= data.title %>" class="btn btn-primary">Detail Anime</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>